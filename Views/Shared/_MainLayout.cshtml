@{
    Layout = "_Layout";
}

<!-- Main layout content is rendered inside the shared _Layout to avoid duplicate navbars -->
<main>
    @RenderBody()
</main>

<footer class="bg-dark text-light mt-5 py-4">
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <h5>AirBB</h5>
                <p>Find your perfect stay anywhere in the world.</p>
            </div>
            <div class="col-md-3">
                <h5>Support</h5>
                <ul class="list-unstyled">
                    <li><a asp-area="" asp-controller="Home" asp-action="Support" class="text-light">Help Center</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="CancellationPolicy" class="text-light">Cancellation Policy</a></li>
                </ul>
            </div>
            <div class="col-md-3">
                <h5>Legal</h5>
                <ul class="list-unstyled">
                    <li><a asp-area="" asp-controller="Home" asp-action="TermsAndCondition" class="text-light">Terms & Conditions</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="CookiePolicy" class="text-light">Cookie Policies</a></li>
                </ul>
            </div>
        </div>
    </div>
</footer>

@section Scripts {
    @RenderSection("Scripts", required: false)
}