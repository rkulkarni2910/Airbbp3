@model Residence

@{
    ViewData["Title"] = "Delete Residence";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Delete Residence</h1>
</div>

<div class="alert alert-warning">
    <strong>Are you sure you want to delete this residence?</strong> This action cannot be undone.
</div>

<table class="table table-bordered">
    <tr>
        <th>Name</th>
        <td>@Model.Name</td>
    </tr>
    <tr>
        <th>Location</th>
        <td>@Model.Location?.Name</td>
    </tr>
    <tr>
        <th>Owner</th>
        <td>@Model.Owner?.Name</td>
    </tr>
    <tr>
        <th>Guests</th>
        <td>@Model.GuestNumber</td>
    </tr>
    <tr>
        <th>Bedrooms</th>
        <td>@Model.BedroomNumber</td>
    </tr>
    <tr>
        <th>Bathrooms</th>
        <td>@Model.BathroomNumber</td>
    </tr>
    <tr>
        <th>Built Year</th>
        <td>@Model.BuiltYear</td>
    </tr>
    <tr>
        <th>Price Per Night</th>
        <td>$@Model.PricePerNight</td>
    </tr>
</table>

<form asp-action="Delete">
    <input type="hidden" name="id" value="@Model.ResidenceId" />
    <button type="submit" class="btn btn-danger">Confirm Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
