@model IEnumerable<Residence>

@{
    ViewData["Title"] = "Manage Residences";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Manage Residences</h1>
    <a asp-action="Create" class="btn btn-primary">Create New Residence</a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Location</th>
            <th>Owner</th>
            <th>Guests</th>
            <th>Bedrooms</th>
            <th>Bathrooms</th>
            <th>Built Year</th>
            <th>Price/Night</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ResidenceId</td>
                <td>@item.Name</td>
                <td>@item.Location?.Name</td>
                <td>@item.Owner?.Name</td>
                <td>@item.GuestNumber</td>
                <td>@item.BedroomNumber</td>
                <td>@item.BathroomNumber</td>
                <td>@item.BuiltYear</td>
                <td>$@item.PricePerNight</td>
                <td>
                    <div class="btn-group" role="group">
                        <a asp-action="Edit" asp-route-id="@item.ResidenceId" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.ResidenceId" class="btn btn-danger btn-sm">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>